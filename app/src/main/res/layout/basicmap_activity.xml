<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/title_background">
        <!--显示当前经纬度 比例尺 接收卫星数量 !-->
        <include layout="@layout/basicmap_top_info" />
    </RelativeLayout>

    <com.amap.api.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title">

    </com.amap.api.maps.MapView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_frame">

        <ToggleButton
            android:id="@+id/locationbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:textOff="开始"
            android:textOn="停止"></ToggleButton>
    </FrameLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false">
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="right">

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textOff="计算"
                android:textOn="测距"
                android:id="@+id/linedistance"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_main" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/satelitte1"
                android:id="@+id/map_type"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_main" />

            <ImageButton
                android:id="@+id/title_tv_option"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:enabled="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/button_record_line"
                android:onClick="record"
                android:layout_marginBottom="15dp"
                android:src="@drawable/path"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>




 